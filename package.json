{
  "name": "static-site-generator",
  "version": "1.0.0",
  "description": "TypeScript static site generator with Markdown, HTMX, and TailwindCSS",
  "type": "module",
  "scripts": {
    "build": "bun scripts/build.ts",
    "build:sync": "bun scripts/build.ts --stripe-sync",
    "build:sync:force": "bun scripts/build.ts --stripe-sync --force",
    "stripe:cleanup": "bun scripts/stripe-cleanup.ts",
    "generate": "bun scripts/generate-products.ts",
    "serve:checkout": "bun run functions/checkout-server.ts",
    "start:checkout": "NODE_ENV=production bun run functions/checkout-server.ts",
    "deploy:checkout:cloudflare": "bun run scripts/deploy-cloudflare.ts",
    "deploy:cloudflare:pages": "bun scripts/deploy-pages.ts",
    "dev": "rspack serve --mode development",
    "test": "bun test --watch ./src/ ./scripts/",
    "test:run": "bun test --no-watch ./src/ ./scripts/",
    "lint": "eslint src/ scripts/ --ext .ts",
    "lint:fix": "eslint src/ scripts/ --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["static-site", "markdown", "typescript", "htmx", "tailwindcss"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@happy-dom/global-registrator": "^16.0.0",
    "@rspack/cli": "^1.1.0",
    "@rspack/core": "^1.1.0",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^16.0.0",
    "js-yaml": "^4.1.1",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.0",
    "postcss-loader": "^8.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.0",
    "wrangler": "^4.66.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "htmx.org": "^2.0.4",
    "marked": "^15.0.0",
    "stripe": "^20.3.1"
  }
}
